<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrea.chessscore.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/horses">
        <TextView
            style="@style/title"
            android:text="@string/app_name"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    style="@style/team_name"
                    android:textAlignment="center"
                    android:background="@color/colorPrimaryTransparent"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Black"/>
                <TextView
                    android:id="@+id/black_score"
                    style="@style/score"
                    android:background="@color/colorPrimaryTransparent"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="0"/>

                <ImageButton
                    android:id="@+id/black_king"
                    style="@style/icon_black"
                    android:src="@drawable/king_black" />

                <ImageButton
                    android:id="@+id/black_queen"
                    style="@style/icon_black"
                    android:src="@drawable/queen_black"/>
                <ImageButton
                    android:id="@+id/black_rok"
                    style="@style/icon_black"
                    android:src="@drawable/rok_black"/>
                <ImageButton
                    android:id="@+id/black_knight"
                    style="@style/icon_black"
                    android:src="@drawable/knight_black"/>
                <ImageButton
                    android:id="@+id/black_bishop"
                    style="@style/icon_black"
                    android:src="@drawable/bishop_black"/>
                <ImageButton
                    android:id="@+id/black_pawn"
                    style="@style/icon_black"
                    android:src="@drawable/pawn_black"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    style="@style/team_name"
                    android:background="@color/colorPrimaryDarkTransparent"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:text="White"/>

                <TextView
                    android:id="@+id/white_score"
                    style="@style/score"
                    android:background="@color/colorPrimaryDarkTransparent"
                    android:text="0"
                    android:textColor="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/white_king"
                    style="@style/icon_white"
                    android:src="@drawable/king_white"/>
                <ImageButton
                    android:id="@+id/white_queen"
                    style="@style/icon_white"
                    android:src="@drawable/queen_white"/>
                <ImageButton
                    android:id="@+id/white_rok"
                    style="@style/icon_white"
                    android:src="@drawable/rok_white"/>
                <ImageButton
                    android:id="@+id/white_knight"
                    style="@style/icon_white"
                    android:src="@drawable/knight_white"/>
                <ImageButton
                    android:id="@+id/white_bishop"
                    style="@style/icon_white"
                    android:src="@drawable/bishop_white"/>
                <ImageButton
                    android:id="@+id/white_pawn"
                    style="@style/icon_white"
                    android:src="@drawable/pawn_white"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/reset_button"
                style="@style/button_style"
                android:text="Reset"
                android:theme="@style/button_style" />

            <ImageButton
                android:id="@+id/info"
                style="@style/info_button"
                android:src="@drawable/ic_info_outline_black_24dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
